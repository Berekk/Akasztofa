<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/verCenter"
        ></RelativeLayout>
    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/reset"
        android:layout_margin="10dp"
        android:background="@drawable/reset"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_above="@id/TVrejtettszoveg"
        android:id="@+id/IVakasztofa"
        android:src="@drawable/akasztofa11"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TVHibaszamlalo"
        android:text="lehetőségek: 00"
        android:textColor="@color/colorAccent"
        android:layout_above="@id/TVrejtettszoveg"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TVrejtettszoveg"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/verCenter"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:text="a s d _ _ _"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/betuvalasztoLayer"
        android:layout_above="@id/tippelGomb"
        >
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/valaszthatobetu"
            android:layout_centerHorizontal="true"
            android:text="0"
            android:textColor="@color/color1"
            android:textAlignment="center"
            android:textSize="40sp"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/center"
            >
        </RelativeLayout>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/buttonbackround"
            android:id="@+id/Plusz"
            android:text="+"
            android:textSize="20sp"
            android:layout_toEndOf="@id/center"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/buttonbackround"
            android:id="@+id/Minusz"
            android:text="-"
            android:textSize="20sp"
            android:layout_toStartOf="@id/center"
            />


    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tippelGomb"
        android:text="Tippel"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>